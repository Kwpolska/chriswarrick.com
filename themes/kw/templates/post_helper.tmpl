## -*- coding: utf-8 -*-

<%def name="nice_url(post)">${post.permalink(lang)[:10]}/${post.permalink(lang)[11:13]}/${post.permalink(lang)[14:16]}/${post.permalink(lang)[17:-5]}/</%def>

<%def name="html_title()">
    <h1>${title}</h1>
    % if link:
            <p><a href='${link}'>${messages[lang]["Original site"]}</a></p>
    % endif
</%def>


<%def name="html_translations(post)">
    %if len(translations) > 1:
        %for langname in translations.keys():
            %if langname != lang and post.is_translation_available(langname):
                <a href="${nice_url(post)}">${messages[langname]["Read in English"]}</a>
            %endif
        %endfor
    %endif
</%def>


<%def name="html_tags(post)">
    %if post.tags:
        %for tag in post.tags:
            <a class="tag" href="${_link('tag', tag, lang)}"><span class="badge badge-info">${tag}</span></a>
        %endfor
    %endif
</%def>

<%def name="html_pager(post)">
    <ul class="pager">
    %if post.prev_post:
        <li class="previous">
            <a href="${nice_url(post.prev_post)}">&larr; ${messages[lang]["Previous post"]}</a>
        </li>
    %endif
    %if post.next_post:
        <li class="next">
            <a href="${nice_url(post.next_post)}">${messages[lang]["Next post"]} &rarr;</a>
        </li>
    %endif
    </ul>
</%def>

