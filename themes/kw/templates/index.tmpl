## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="phelper" file="post_helper.tmpl"/>
<%namespace name="disqus" file="disqus_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="content">
    <div class="row-fluid">
    % for post in posts:
    <article class="postbox span6">
    <header class="page-header">
    <h1><a href="${phelper.nice_url(post)}">${post.title(lang)}</a><br>
    <small>
        ${post.date.strftime(date_format)}<br> ${phelper.html_tags(post)}
    </small>
    </h1>
    </header>
    <div class="text">
    ${post.text(lang, index_teasers)}
    </div>
    <footer><a href="${phelper.nice_url(post)}" class="morelink">more</a> â€” <a href="${phelper.nice_url(post)}#disqus_thread">comments</a></footer>
    </article>
    % if (loop.index + 1) % 2 == 0:
    </div><div class="row-fluid">
    % endif
    % endfor
    ${helper.html_pager()}
    </div>
    ${helper.mathjax_script(post)}
</%block>
