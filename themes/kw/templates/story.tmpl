## -*- coding: utf-8 -*-
<%inherit file="post.tmpl"/>
<%namespace name="disqus" file="disqus_helper.tmpl"/>
<%block name="content">
%if title:
    <header class="page-header">
    <h1>${title}</h1>
    </header>
%endif
    <%
    from nikola.post import TEASER_REGEXP
    teaser_split = TEASER_REGEXP.split(post.text(lang))
    try:
        pdata = u'<div class="lead">{0}</div>{1}'.format(teaser_split[0], teaser_split[3])
    except IndexError:
        pdata = post.text(lang)
    %>
    ${pdata}
<!--
%if enable_comments:
    ${disqus.html_disqus(post.permalink(absolute=True), post.title(lang), post.base_path)}
%endif
-->
</%block>
