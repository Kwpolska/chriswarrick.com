{% extends "base.j2" %}

{% block main -%}
<nav class="postnav">
    <ul>
        <li class="prev{{' disabled' if not resource.prev_by_time }}">
            {% if not resource.prev_by_time %}<span class="prev disabled">Previous</span>
            {% else %}<a class="prev"
                title="{{ resource.prev_by_time.meta.title }}"
                href="{{ content_url(resource.next_by_time.url) }}">Previous</a>{% endif %}
        </li>
        <li class="backlink">
        <a class="backlink" href="/blog/">Back to list</a>
        </li>

        <li class="next{{' disabled' if not resource.next_by_time }}">
            {% if not resource.next_by_time %}<span class="next disabled">Next</span>
            {% else %}<a class="next"
                title="{{ resource.next_by_time.meta.title }}"
                href="{{ content_url(resource.next_by_time.url) }}">Next</a>{% endif %}
        </li>
    </ul>
</nav>
<article>
<header>
<h1><a href="{{ content_url(resource.url|replace('-', '/', 3)|replace('.html', '/')) }}/">{{ resource.meta.title }}</a></h1>
<div>Published <time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}">{{ resource.meta.created.strftime('%a, %B %d, %Y') }}</time></div>
<div class="tags">Tags: {% for tag in resource.meta.tags %}<a href="{{ content_url('blog/tags/'~tag~'.html') }}">{{ tag }}</a>; {% endfor %}</div>
</header>
<div class="text">
{% filter markdown|typogrify -%}
{% mark post -%}
{% block post -%}{%- endblock %}
{%- endmark %}
{%- endfilter %}
</div>
<footer><a href="#comments" title="Comments for {{ page.title }}">Comments</a></footer>
</article>

<article>
<header>
<h1 id="comments">Comments</h1>
You shall leave one NOW.
</header>
<div class="text">
<div id="disqus_thread">
