{% layout "base.liquid" %}
<header class="page-header"><h1>Tags and Categories</h1></header>

<h2>Categories</h2>
<ul class="tags full-list">
  {% for link in links %}
  {% if link.SubGroup == "category" %}
  <li><a class="reference" href="{{ link.Url }}" style="background-color: {{ link.Title | categoryColor }} !important; font-size: 1.3rem !important">{{ link.Title }}</a></li>
  {% endif %}
  {% endfor %}
</ul>

<h2>Tags</h2>
<ul class="tags full-list">
  {% for link in links %}
    {% if link.SubGroup == "tag" %}
      <li><a class="reference" href="{{ link.Url }}">{{ link.Title }}</a></li>
    {% endif %}
  {% endfor %}
</ul>
