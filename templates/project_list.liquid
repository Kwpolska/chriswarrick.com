{% layout "base.liquid" %}
<header class="page-header">
  <h1>{{ title }}</h1>
</header>

{% if FeaturedProjects %}
  <div id="project-carousel" class="carousel slide">
    <div class="carousel-indicators">
      {% for p in FeaturedProjects %}
        <button type="button" data-bs-target="#project-carousel" data-bs-slide-to="{{ forloop.index0 }}"
          {% if forloop.index0 == 0 %}
            class="active" aria-current="true"
          {% endif %}
          aria-label="Slide {{ forloop.index }}"></button>
      {% endfor %}
    </div>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      {% for p in FeaturedProjects %}
        <div class="carousel-item
{% if forloop.index0 == 0 %}
active
{% endif %}
">
          <a href="{{ p.Url }}">
            <img class="d-block w-100" style="max-width: 100%" src="{{ p.Meta.Thumbnail }}" alt="{{ p.Title }}">
          </a>
          <div class="carousel-caption d-none d-md-block">
            <h3>{{ p.Title }} {{ p.Meta.Project.DevStatus | projectDevStatus }}</h3>
            <p>{{ p.Meta.Description }}</p>
            <a href="{{ p.Url }}" class="btn btn-primary"><i class="fa fa-info-circle"></i> Learn more</a>
          </div>
        </div>
      {% endfor %}
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#project-carousel" data-bs-slide="prev">
      <span aria-hidden="true">&lsaquo;</span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#project-carousel" data-bs-slide="next">
      <span aria-hidden="true">&rsaquo;</span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
{% endif %}

<h2>All projects</h2>

<ul class="project-list">
  {% for p in Items %}
    <li class="project project-sort-{{ p.Meta.Project.Sort }}"><a href="{{ p.Url }}">{{ p.Title }}</a> {{ p.Meta.Project.DevStatus | projectDevStatus }}</li>
  {% endfor %}
</ul>
